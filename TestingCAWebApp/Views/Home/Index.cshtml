@{
    ViewBag.Title = "PremiumCalc";
}

<form action="/Home/InputForm" method="post" class="form">
    <h1>Find out your premium.</h1>
    <div class="form-group">
        <label for="gender">Enter your gender:</label>
        <input id="gender" type="text" class="form-control" name="gender" />
    </div>
    <div class="form-group">
        <label for="age">Enter your age:</label>
        <input id="age" type="number" class="form-control" name="age" />
    </div>

    <input id="submit" type="submit" value="Submit form" class="btn btn-primary" />
</form>